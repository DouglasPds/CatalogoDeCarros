{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "airbnb-base"
    ],
    "parserOptions": {
        "ecmaVersion": 12,
        "sourceType": "module"
    },
    "rules": {
        "linebreak-style": [
            "error",
            "windows"
        ],
        "no-use-before-define": [
            "error",
            {
                "functions": false
            }
        ],
        "no-unused-expressions": [
            "error",
            {
                "allowTernary": true
            }
        ]
    }
}